# Hackathon 后端配置文件示例
# 复制此文件为 config.yaml 并修改相应配置

# 数据库配置
database:
  host: localhost
  port: "3306"
  user: root
  password: password
  name: hackathon_db

# JWT配置
jwt:
  secret: your-secret-key-change-in-production  # 生产环境请使用强随机字符串
  expire_hours: 24

# 服务器配置
server:
  port: "8000"
  mode: debug  # debug/release/test

# CORS配置
cors:
  allow_origins:
    - http://localhost:3000
    - http://localhost:3001

# 区块链配置
blockchain:
  contract_address: "0x9637F7201aDB470104dBACa9d600b09C50ccb752"
  network: "sepolia"
  chain_id: 11155111
  private_key: ""  # 私钥配置，用于发送区块链交易。生产环境中请使用环境变量 BLOCKCHAIN_PRIVATE_KEY
  # 示例私钥格式（不要在生产环境中使用此私钥）:
  # private_key: "ac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80"

